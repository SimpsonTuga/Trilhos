@model IEnumerable<Trails4Health.Models.Guide>

@{
    ViewData["Title"] = "Index";
}
<head>
    <style type="text/css">
        .container {
            width: 70%;
            text-align: center;
            margin: 0 auto;
            background-color: rgba(0,0,0,0.6);
            broder-radius: 4px;
            margin-top: 100Px;
        }



        .btn1 {
            height: 45px;
            width: 180px;
            padding: 5px 30px;
            color: saddlebrown;
            border-radius: 4px;
            border: none;
            background-color: sandybrown;
            border-bottom: 2px solid saddlebrown;
        }
    </style>
</head>

<div class="container">
    <h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn1">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdGuide"class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdGuide" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdGuide"class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table></div>


